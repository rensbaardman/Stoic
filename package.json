{
	"name": "Stoic",
	"version": "0.1.0",
	"dependencies": {
		"webextension-polyfill": "^0.4.0"
	},
	"devDependencies": {
		"@wext/shipit": "^0.2.0",
		"chai": "^4.2.0",
		"chromedriver": "^75.0.0",
		"copy-webpack-plugin": "^5.0.3",
		"eslint": "^5.16.0",
		"geckodriver": "^1.16.2",
		"karma": "^4.1.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-firefox-launcher": "^1.1.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-webpack": "^4.0.2",
		"mocha": "^6.1.4",
		"npm-run-all": "^4.1.5",
		"rewire": "github:rensbaardman/rewire",
		"rewire-webpack-plugin": "^1.0.0",
		"selenium-webdriver": "^4.0.0-alpha.1",
		"sinon": "^7.3.2",
		"sinon-chrome": "^3.0.1",
		"web-ext": "^3.0.0",
		"webpack": "^4.33.0",
		"webpack-cli": "^3.3.4",
		"zip-webpack-plugin": "^3.0.0"
	},
	"scripts": {
		"test": "npm-run-all test:unit-browser test:func",
		"test:unit": "mocha --recursive test/unit",
		"test:unit:watch": "npm run test:unit -- --watch",
		"test:unit-browser": "karma start",
		"test:unit-browser:watch": "npm run test:unit-browser -- --auto-watch --no-single-run",
		"test:func": "npm-run-all test:func:*",
		"test:func:firefox": "npm run build:firefox && SELENIUM_BROWSER=firefox mocha --recursive test/functional",
		"test:func:chrome": "npm run build:chrome   && SELENIUM_BROWSER=chrome  mocha --recursive test/functional",
		"build": "npm-run-all build:*",
		"build:firefox": "webpack --env firefox",
		"build:chrome": "webpack --env chrome"
	},
	"private": true
}
