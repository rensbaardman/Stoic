{
	"name": "Stoic",
	"version": "0.1.0",
	"dependencies": {
		"normalize.css": "^8.0.1",
		"webextension-polyfill": "^0.4.0"
	},
	"devDependencies": {
		"@wext/shipit": "^0.2.0",
		"chai": "^4.2.0",
		"chromedriver": "^75.0.0",
		"clean-webpack-plugin": "^3.0.0",
		"copy-webpack-plugin": "^5.0.3",
		"css-loader": "^3.0.0",
		"eslint": "^5.16.0",
		"geckodriver": "^1.16.2",
		"gm": "^1.23.1",
		"karma": "^4.1.0",
		"karma-chrome-launcher": "^2.2.0",
		"karma-firefox-launcher": "^1.1.0",
		"karma-mocha": "^1.3.0",
		"karma-mocha-reporter": "^2.2.5",
		"karma-sourcemap-loader": "^0.3.7",
		"karma-webpack": "^4.0.2",
		"mini-css-extract-plugin": "^0.7.0",
		"mocha": "^6.1.4",
		"node-sass": "^4.12.0",
		"npm-run-all": "^4.1.5",
		"nyc": "^14.1.1",
		"rewire": "github:rensbaardman/rewire",
		"rewire-webpack-plugin": "^1.0.0",
		"sass-loader": "^7.1.0",
		"selenium-webdriver": "^4.0.0-alpha.3",
		"sinon": "^7.3.2",
		"sinon-chrome": "^3.0.1",
		"suppress-chunks-webpack-plugin": "^1.0.5",
		"web-ext": "^3.0.0",
		"webpack": "^4.34.0",
		"webpack-cli": "^3.3.4",
		"zip-webpack-plugin": "^3.0.0"
	},
	"scripts": {
		"test": "npm-run-all test:unit:browser test:func",
		"test:unit": "mocha --recursive test/unit",
		"test:unit:watch": "npm run test:unit -- --watch",
		"test:unit:browser": "karma start",
		"test:unit:browser:watch": "npm run test:unit:browser -- --auto-watch --no-single-run",
		"test:func": "npm-run-all test:func:firefox test:func:chrome",
		"test:func:background": "npm-run-all test:func:*:background",
		"test:func:firefox": "npm-run-all build:firefox:test test:func:firefox:no-build",
		"test:func:firefox:no-build": "SELENIUM_BROWSER=firefox mocha --recursive test/functional",
		"test:func:firefox:background": "npm-run-all build:firefox:test test:func:firefox:background:no-build",
		"test:func:firefox:background:no-build": "SELENIUM_BROWSER=firefox mocha --recursive test/functional/background.test.js",
		"test:func:chrome": "npm-run-all build:chrome:test test:func:chrome:no-build",
		"test:func:chrome:no-build": "SELENIUM_BROWSER=chrome mocha --recursive test/functional",
		"test:func:chrome:background": "npm-run-all build:chrome:test test:func:chrome:background:no-build",
		"test:func:chrome:background:no-build": "SELENIUM_BROWSER=chrome mocha --recursive test/functional/background.test.js",
		"test:visual": "npm-run-all test:visual:*",
		"test:visual:firefox": "npm-run-all build:firefox:test test:visual:firefox:no-build",
		"test:visual:firefox:no-build": "SELENIUM_BROWSER=firefox node test/visual/popup.visual.js",
		"test:visual:chrome": "npm-run-all build:chrome:test test:visual:chrome:no-build",
		"test:visual:chrome:no-build": "SELENIUM_BROWSER=chrome node test/visual/popup.visual.js",
		"coverage": "nyc npm run test:unit",
		"build": "npm-run-all build:*",
		"build:firefox": "webpack --env firefox --display-modules",
		"build:firefox:watch": "npm run build:firefox -- --watch",
		"build:firefox:test": "WEBPACK_TEST='true' npm run build:firefox",
		"build:firefox:test:watch": "WEBPACK_TEST='true' npm run build:firefox:watch",
		"build:chrome": "webpack --env chrome --display-modules",
		"build:chrome:test": "WEBPACK_TEST='true' npm run build:chrome",
		"debug": "npm-run-all build:firefox:test debug:no-build",
		"debug:no-build": "web-ext run -s build/Stoic-0.1.0-firefox -u about:debugging example.com",
		"debug:watch": "npm-run-all --parallel build:firefox:watch debug:no-build"
	},
	"private": true
}
